<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List view for estate.property.type -->
    <record id="view_estate_property_type_list" model="ir.ui.view">
        <field name="name">estate.property.type.list</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree string="Property Types" default_order="sequence">
                <field name="sequence" widget="handle"/>
                <field name="name"/>    
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form view for estate.property.type -->
    <record id="view_estate_property_type_form" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <header>
            <button name="action_show_offers" type="object" string="Offers" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible': [('offer_count', '=', 0)]}">
                <field name="offer_count" widget="statinfo"/>
            </button>
            </header>
            <form string="Property Type">
                <group>
                    <field name="name"/>
                </group>
                <notebook>
                    <page string="Properties">
                        <field name="property_ids" widget="one2many_list">
                            <tree string="Related Properties" editable="bottom">
                                <field name="name"/>
                                <field name="description"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>
    <record id="action_show_offers" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>

    

</odoo>
